<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_rules" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="annahockeyleague.com.ahl.Rules">

    <RelativeLayout
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rulescontentheader1"
            android:text="@string/RulesContentHeader1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>
        <TextView
            android:textColor="@color/cardview_dark_background"
            android:layout_width="match_parent"
            android:id="@+id/rulescontent1"
            android:text="@string/RulesContent1"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rulescontentheader1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rulescontentheader2"
            android:text="@string/RulesContentHeader2"
            android:layout_below="@id/rulescontent1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>
        <TextView
            android:textColor="@color/cardview_dark_background"
            android:layout_width="match_parent"
            android:id="@+id/rulescontent2"
            android:textSize="15sp"
            android:text="@string/RulesContent2"
            android:layout_height="wrap_content"
            android:layout_below="@id/rulescontentheader2"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
